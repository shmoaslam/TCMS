@model TCMS.Models.UserModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "frmLogin", role = "form" }))
{
    <div class="form-group">
        <label for="username">Username : </label>
        @Html.TextBoxFor(x => x.Username, new { id = "username", @class="form-control", placeholder = "Enter Username"})
    </div>
    <div class="form-group">
        <label for="pwd">Password : </label>
        @Html.PasswordFor(x => x.Password, new { id = "password", @class = "form-control", placeholder = "Enter Password" })
    </div>
    <div class="checkbox">
        <label>@Html.CheckBoxFor(x=>x.RememberMe)Remember me</label>
    </div>
    <button type="submit" class="btn btn-default">Login</button>
}


